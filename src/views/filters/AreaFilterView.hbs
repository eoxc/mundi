<div class="panel-heading">
  <h3 class="panel-title">
    <a role="button" data-toggle="collapse" href="#collapse-spatial-filter">{{t 'Spatial Filter'}} <span class="caret"></span></a>
  </h3>
</div>
<div id="collapse-spatial-filter" class="panel-body collapse in">
  <div class="form-group">
    <label for="">{{t 'Draw'}}</label>
    <div class="btn-group btn-group-justified tools" role="group" aria-label="...">
      <a href="#" role="button" class="btn btn-default tool tool-point">{{t 'Point'}}</a>
      <a href="#" role="button" class="btn btn-default tool tool-bbox">{{t 'Rectangle'}}</a>
      <a href="#" role="button" class="btn btn-default tool tool-polygon">{{t 'Polygon'}}</a>
    </div>
  </div>
  {{#if uploadEnabled}}
  <div class="form-group">
    <label for="">{{t 'Upload'}}</label>
    <div class="input-group">
      <div class="input-group-btn">
        <label class="btn btn-default btn-file btn-sm"
          data-toggle="tooltip" data-container="body" data-placement="right"
          title="{{t 'Select a zipped Shapefile, unzipped Shapefile or GeoJSON file'}}">
          {{t 'Browse'}} <input type="file" multiple style="display: none;">
        </label>
      </div>
      <input type="text" class="form-control input-sm" placeholder="{{t 'No file selected'}}" disabled>
    </div>
    <div class="feature-list"></div>
  </div>
  {{/if}}

  <div id="selection-wrapper">
    <div class="form-group show-geometry show-point">
      <label for="">{{t 'Current Selection'}}</label>
      <div class="input-group coordinate-input-container tools">
        <input type="number" class="form-control input-sm" placeholder="{{t 'Longitude'}}" min="-180" max="180">
        <input type="number" class="form-control input-sm" placeholder="{{t 'Latitude'}}" min="-90" max="90">
      </div>
    </div>

    <div class="form-group show-geometry show-bbox">
      <label for="">{{t 'Current Selection'}}</label>
      <div class="input-group coordinate-input-container tools">
        <input type="number" class="form-control input-sm" placeholder="Min-X" min="-180" max="180">
        <input type="number" class="form-control input-sm" placeholder="Min-Y" min="-90" max="90">
        <input type="number" class="form-control input-sm" placeholder="Max-X" min="-180" max="180">
        <input type="number" class="form-control input-sm" placeholder="Max-Y" min="-90" max="90">
      </div>
    </div>

    <div class="form-group show-geometry show-polygon">
      <label for="">{{t 'Current Selection'}}</label>
      <!-- <input type="text" class="form-control input-sm" disabled> -->
    </div>

    <div class="form-group">
      <div class="btn-group btn-group-justified tools" role="group" aria-label="...">
        <a href="#" role="button" class="btn btn-default btn-sm tool tool-show-feature">{{t 'Zoom to Selection'}}</a>
        <a href="#" role="button" class="btn btn-danger btn-sm tool tool-clear">{{t 'Clear Selection'}}</a>
      </div>
    </div>
  </div>
</div>
